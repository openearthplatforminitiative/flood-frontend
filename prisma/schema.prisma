generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LatLng {
  id   String @id
  lat  Float
  lng  Float
  Site Site[]
}

model Site {
  id       String  @id @default(cuid())
  name     String
  type     String
  position LatLng  @relation(fields: [latLngId], references: [id])
  city     String
  country  String
  radius   Int
  User     User?   @relation(fields: [userId], references: [id])
  userId   String?
  latLngId String
}

model User {
  id                     String   @id @default(cuid())
  name                   String
  password               String
  phone                  String
  allowPushNotifications Boolean  @map(name: "allow_push_notifications")
  sites                  Site[]
  createdAt              DateTime @default(now()) @map(name: "created_at")
  updatedAt              DateTime @updatedAt @map(name: "updated_at")
}
